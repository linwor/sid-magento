<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <sid>
                <active>1</active>
                <title>SID Secure EFT</title>
                <allowspecific>0</allowspecific>
                <currency>ZAR</currency>
                <instructions>Pay with SID Secure EFT</instructions>
                <payment_action>Authorization</payment_action>
                <model>SID\SecureEFT\Model\SID</model>
                <is_gateway>0</is_gateway>
                <can_order>1</can_order>
                <can_use_checkout>1</can_use_checkout>
                <can_capture>1</can_capture>
                <can_void>1</can_void>
                <can_refund>0</can_refund>
                <can_use_for_multishipping>1</can_use_for_multishipping>
                <enable_notify>1</enable_notify>
            </sid>
        </payment>
    </default>
</config>
